record(fanout, $(LOCATION):LENS:$(LENSID):_F_CALC_SCAN) {
    field(DESC, "Periodic run of focus calculation")
    field(SCAN, "2 second")
    field(SELM, "All")
    field(LNK1, "$(LOCATION):LENS:$(LENSID):C_CALC")
    field(LNK2, "$(LOCATION):LENS:$(LENSID):R_CALC")
}

